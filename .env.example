# === CONFIGURACIÓN DEL SERVIDOR ===
PORT=3000
NODE_ENV=production

# === CONFIGURACIÓN DE CORS ===
CORS_ORIGIN=https://your-frontend-app.com,https://your-admin-panel.com

# === CONFIGURACIÓN DE RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CONFIGURACIÓN DE AUTENTICACIÓN ===
API_KEY=your-main-api-key-here
ADDITIONAL_API_KEYS=key1,key2,key3

# === CONFIGURACIÓN DE WEBHOOKS ===
WEBHOOK_BASE_URL=https://your-backend.railway.app
WEBHOOK_SECRET=your-webhook-secret-here

# === CONFIGURACIÓN DE WASENDER API ===
WASENDER_API_URL=https://www.wasenderapi.com/api
WASENDER_API_TOKEN=your-wasender-api-token

# === CONFIGURACIÓN DE CRONHOOKS ===
CRONHOOKS_API_URL=https://api.cronhooks.io
CRONHOOKS_API_TOKEN=your-cronhooks-api-token

# === CONFIGURACIÓN DE TIMEOUTS Y REINTENTOS ===
DEFAULT_TIMEOUT_MS=30000
DEFAULT_MAX_RETRIES=3
DEFAULT_RETRY_DELAY_MS=1000
DEFAULT_MAX_DELAY_MS=30000

# === CONFIGURACIÓN DE LOGS ===
LOG_LEVEL=info

# === CONFIGURACIÓN DE NOTIFICACIONES POR EMAIL ===
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=admin@yourdomain.com

# === CONFIGURACIÓN DE NOTIFICACIONES POR WEBHOOK ===
WEBHOOK_NOTIFICATIONS_ENABLED=false
NOTIFICATION_WEBHOOK_URL=https://your-notification-endpoint.com/webhook
NOTIFICATION_WEBHOOK_SECRET=your-notification-secret

# === CONFIGURACIÓN DE NOTIFICACIONES DE SLACK ===
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK