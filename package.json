{
  "name": "whatsapp-scheduler-backend",
  "version": "1.0.0",
  "description": "Backend for WhatsApp Scheduler with Wasender and Cronhooks integration",
  "main": "dist/app.js",
  "scripts": {
    "start": "node -e \"const fs=require('fs');if(!fs.existsSync('dist')){console.log('[startup] dist missing, building...');require('child_process').execSync('npm run build',{stdio:'inherit'});}require('./dist/app.js');\"",
    "postinstall": "npm run build",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "keywords": [
    "whatsapp",
    "scheduler",
    "cronhooks",
    "wasender",
    "nodejs",
    "typescript"
  ],
  "author": "WhatsApp Scheduler Team",
  "license": "MIT"
}
